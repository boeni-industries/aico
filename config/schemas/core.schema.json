{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AICO Core Configuration",
  "type": "object",
  "properties": {
    "system": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "AICO"
        },
        "version": {
          "type": "string"
        },
        "environment": {
          "type": "string",
          "enum": ["development", "staging", "production"],
          "default": "development"
        },
        "data_directory": {
          "type": "string",
          "default": "./data"
        },
        "log_level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARN", "ERROR"],
          "default": "INFO"
        }
      },
      "required": ["name", "environment", "data_directory", "log_level"]
    },
    "message_bus": {
      "type": "object",
      "properties": {
        "backend_port": {
          "type": "integer",
          "minimum": 1024,
          "maximum": 65535,
          "default": 5555
        },
        "frontend_port": {
          "type": "integer",
          "minimum": 1024,
          "maximum": 65535,
          "default": 5556
        },
        "max_message_size": {
          "type": "integer",
          "minimum": 1024,
          "default": 1048576
        },
        "heartbeat_interval": {
          "type": "integer",
          "minimum": 1,
          "default": 30
        }
      },
      "required": ["backend_port", "frontend_port", "max_message_size", "heartbeat_interval"]
    },
    "api": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string",
          "default": "127.0.0.1"
        },
        "port": {
          "type": "integer",
          "minimum": 1024,
          "maximum": 65535,
          "default": 8770
        },
        "cors_origins": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["http://localhost:3000"]
        },
        "rate_limit": {
          "type": "integer",
          "minimum": 1,
          "default": 100
        }
      },
      "required": ["host", "port", "cors_origins", "rate_limit"]
    }
  },
  "required": ["system", "message_bus", "api"]
}
